<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fade_bg_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Form Layout -->
        <LinearLayout
            android:id="@+id/form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:text="Back"
                android:backgroundTint="@color/main_color"/>

            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:text="Settings"
                android:textColor="@color/main_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/oldusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Old Username"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/newusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="New Username"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/confirnewmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="10dp" />


            <EditText
                android:id="@+id/newemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="New E-mail"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/newphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Phone"
                android:inputType="phone"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/Changeyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Change Year"
                android:inputType="number"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="Confirm"
                android:backgroundTint="@color/main_color"/>

        </LinearLayout>

        <!-- Department Selection Layout -->
        <LinearLayout
            android:id="@+id/department_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/departmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="Department *"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/department_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/submit_department_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="Submit Department"
                android:backgroundTint="@color/main_color"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
