<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary70"
    android:backgroundTintMode="add">


    <Button
        android:id="@+id/buttonRequests"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/material_dynamic_primary20"
        android:text="Leave Requests"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <Button
        android:id="@+id/buttonLicensed"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/material_dynamic_primary20"
        android:text="Leave Approval"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonRequests"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonRequests"
        app:layout_constraintTop_toBottomOf="@+id/buttonRequests" />

    <Button
        android:id="@+id/buttonEmployees"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/material_dynamic_primary20"
        android:text="Employees"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLicensed"
        app:layout_constraintStart_toStartOf="@+id/buttonLicensed"
        app:layout_constraintTop_toBottomOf="@+id/buttonLicensed" />


</androidx.constraintlayout.widget.ConstraintLayout>