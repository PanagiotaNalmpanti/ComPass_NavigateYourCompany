<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fade_bg_blue">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ComPass"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <!-- Profile Button -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/circular_bg">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/profile_button"
            android:src="@drawable/ic_user_white"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color2"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/buttonRequests"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Leave Requests"
        android:textSize="18sp"
        android:backgroundTint="@color/bg_color2"/>

    <Button
        android:id="@+id/onLeaveBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_centerHorizontal="true"
        android:text="Employees on Leave"
        android:textSize="18sp"
        android:backgroundTint="@color/bg_color2"/>

    <Button
        android:id="@+id/employeesBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="278dp"
        android:layout_centerHorizontal="true"
        android:text="Employees"
        android:textSize="18sp"
        android:backgroundTint="@color/bg_color2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color2"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="640dp"/>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/circular_bg">
        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_settings"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/circular_bg">
        <ImageView
            android:id="@+id/home_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_home"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/circular_bg">
        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_logout"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"/>
    </FrameLayout>

</RelativeLayout>